<!DOCTYPE html>
<html lang="en">

  <head>

    <% include parts/head %>
    <title>All Posts</title>

  </head>
  
  <body>

    <!-- Navigation -->
    <% if(username){%>
       <% include parts/userNav %>
    <%} else {%>
     <% include parts/navigation %> <%}%>

    <!-- Page Content -->
    <div class="container">

      <div class="row">

        <!-- Blog Entries Column -->
        <div class="col-md-8 offset-md-2">

          <h1 class="my-4">Blog
            <small>Articles</small>
          </h1>

          <!-- Blog Post -->
          <div class="card mb-4">
            <% posts.forEach(function(post){%>
              <div class="card-body ">
                  <a href="/post/<%= post.title %>"><img class="card-img-top" src="<%= post.picture %>" alt="Card image cap"></a>
                  <h2 class="card-title"><%= post.title %></h2>
                  <p><%= post.content %></p>
                  <span><i class="far fa-heart"></i><%= post.likes %></span>
              </div>
            <% }) %>

        </div>


      </div>
      <!-- /.row -->

    </div>
    <!-- /.container -->

    <!-- Footer -->
    <footer class="py-5 bg-dark">
      <div class="container">
        <p class="m-0 text-center text-white">Copyright &copy; Your Website 2018</p>
      </div>
      <!-- /.container -->
    </footer>
  </body>
</html>
