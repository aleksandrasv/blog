<!DOCTYPE html>
<html lang="en">

  <head>

    <% include parts/head %>
    <title><%= post.title %></title>
    <!-- Custom JS -->
    <script src="/js/comment.js" type="text/javascript" charset="utf-8" defer></script>
    <script src="/js/postUpdate.js" type="text/javascript" charset="utf-8" defer></script>
  </head>
  <body>
    
    <!-- Navigation -->
    <% if(username){%>
       <% include parts/userNav %>
    <%} else {%>
  	 <% include parts/navigation %> <%}%>
    <div class="container">
      <div class="row completed">
        <div class="col-md-8">
          <h2 class="mt-4">This Post Have Been Deleted</h2>
          <a href="/posts" class="login"><h4>View All</h4></a>
          <hr>
        </div>
      </div>
    </div>
    
      
    <% if(post.username == username){%>
      <div class="container" id="deleted">
      <div class="row" 
        <div class="col-lg-8">
        <div class="col-lg-8">
          <form novalidate="" class="mt-4" id="update">
            <div class="form-group">
              <div class="form-row">
                <div class="form-group col-md-6">
                  <p class="mt-4 mEdits" id="postTtl"><%= post.title %></p>
                  <input type="hidden" value="<%= post._id %>">
                  <textarea type="text" name="title" rows="1" id="" class="form-control pEdits" value=""><%= post.title %></textarea>
                </div>
              </div>
            </div>
            <p class="lead">
              by <%= post.author %>
            </p>
              <hr>
              <img class="img-fluid rounded" src="<%= post.picture %>" alt="">
              <hr>
            <div class="form-group">
              <div class="form-row">
                <div class="form-group col">
                <p class="lead mEdits" id="postCntnt"><%= post.content %></p>
                  <textarea type="text" name="content" rows="10" id="" class="form-control pEdits" value=""><%= post.content %></textarea>
                </div>
              </div>
            </div>
            <div class='row justify-content-between'>
              <div class="col-md-4">
                <button id="postEdit" class="btn btn-primary pEdits">Submit</button>
                <button id="makeEdit" class="btn btn-primary mEdits">Make Edits</button>
              </div>
              <div class="col-md-4 aling">
                <button id="deletePost" class="btn btn-primary pEdits">Delete</button>
              </div>
            </div>
          </form>
          </div>
        </div>
        </div>
      </div>
      <div class="container">
       <div class="row">
        <div class="col-lg-8 comments">
          <hr>
          <h2>Comments</h2>
          <hr>
          <% post.comments.forEach(function(comment){%>
          <p class="lead"><%= comment.name %></p>
          <p><%= comment.text %></p>
          <hr>
          <% }) %>
        </div>
      </div>
      <div class="row">
        <div class="col-lg-8 commentForm">
          <form method="POST">
            <div class="form-group">
              <label for="name">Name</label>
              <input class="form-control" type="text" name="name" id="name" placeholder="Nick Name">
            </div>
            <div class="form-group">
              <label for="comment">Comment</label>
              <textarea class="form-control" id="coment" name="text"rows="3" placeholder="Your Comment"></textarea>
              <input type="hidden" name="_id" value="<%= post._id %>">
            </div>
            <div class="form-group">
              <button id="addComment" type="submit" class="btn btn-primary">SENT</button>
            </div>
          </form>
        </div>
      </div>
      </div>
      </div>
      <% } else {%>
      <div class="container" id="deleted">
      <div class="row">
      	<div class="col-lg-8">
      		<h1 class="mt-4" name="title"><%= post.title %></h1>
      		<p class="lead">
            by <%= post.author %>
          	</p>
          	<hr>
          	<img class="img-fluid rounded" src="<%= post.picture %>" alt="">
          	<hr>
          	<p class="lead"><%= post.content %></p>	
        </div>
      </div>
      <div class="row">
        <div class="col-lg-8 comments">
          <hr>
          <h2>Comments</h2>
          <hr>
          <% post.comments.forEach(function(comment){%>
          <p class="lead"><%= comment.name %></p>
          <p><%= comment.text %></p>
          <hr>
          <% }) %>
        </div>
      </div>
      <div class="row">
        <div class="col-lg-8 commentForm">
          <form method="POST">
            <div class="form-group">
              <label for="name">Name</label>
              <input class="form-control" type="text" name="name" id="name" placeholder="Nick Name">
            </div>
            <div class="form-group">
              <label for="comment">Comment</label>
              <textarea class="form-control" id="coment" name="text"rows="3" placeholder="Your Comment"></textarea>
              <input type="hidden" name="_id" value="<%= post._id %>">
            </div>
            <div class="form-group">
              <button id="addComment" type="submit" class="btn btn-primary">SENT</button>
            </div>
          </form>
        </div>
      </div>
       
    <%}%> 
    </div> 
  </body>

  </html>
